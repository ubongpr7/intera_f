{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/CampaignForm/CampaignForm.js",
    "components/Footer/Footer.js",
    "components/Forms/CampaignForm.js",
    "components/Forms/ConfigForm.js",
    "components/Header/Header.js",
    "components/Landing/Landing.js",
    "components/Modals/SetupAdAccountModal.js",
    "app/dashboard/page.js",
    "app/page.js",
    "app/accounts/signup/page.js",
    "app/Terms/CookiesPolicy/page.js",
    "app/accounts/facebook/page.js",
    "app/campaign_form/page.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
